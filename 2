using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Project2
{
    class Shape
    {
        public double length = 0.0;
        public double width = 0.0;
        public double radius = 0.0;

        public Shape(double length, double width)
        {
            this.length = length;
            this.width = width;
        }

        public Shape(double radius)
        {
            this.radius = radius;
        }

        public virtual void Area()
        {
            Console.WriteLine("Area cannot be determined for generic shape.");
        }
    }

    class Rectangle : Shape
    {
        public Rectangle(double length, double width) : base(length, width) { }

        public override void Area()
        {
            double area = length * width;
            Console.WriteLine("Area of Rectangle is : {0:0.00}", area);
        }
    }

    class Circle : Shape
    {
        public Circle(double radius) : base(radius) { }

        public override void Area()
        {
            double area = Math.PI * Math.Pow(radius, 2);
            Console.WriteLine("Area of Circle is : {0:0.00}", area);
        }
    }
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Enter the Length:");
            double length = double.Parse(Console.ReadLine());

            Console.WriteLine("Enter the Width:");
            double width = double.Parse(Console.ReadLine());

            Rectangle objRectangle = new Rectangle(length, width);
            objRectangle.Area();

            Console.WriteLine("Enter the Radius:");
            double radius = double.Parse(Console.ReadLine());

            Circle objCircle = new Circle(radius);
            objCircle.Area();

            Console.ReadKey();
        }
    }
}
